# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/madrasa?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-generate-with-openssl

# Google OAuth (Optional - for Google Sign In)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# UploadThing (For video/file uploads)
UPLOADTHING_SECRET=your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Cloudflare R2 (S3-compatible storage for videos)
CLOUDFLARE_R2_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=madrasa-videos
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-public-url.com

# SSL Commerz (Payment Gateway - Bangladesh)
# Will be added later when payment integration is implemented
# SSLCOMMERZ_STORE_ID=your-store-id
# SSLCOMMERZ_STORE_PASSWORD=your-store-password
# SSLCOMMERZ_IS_LIVE=false

# Node Environment
NODE_ENV=development
